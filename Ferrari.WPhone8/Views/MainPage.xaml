<phone:PhoneApplicationPage xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                            xmlns:BindableApplicationBar="clr-namespace:BindableApplicationBar;assembly=BindableApplicationBar"
                            xmlns:Converters="clr-namespace:Ferrari.Converters"
                            xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
                            x:Class="Ferrari.WPhone8.MainPage"
                            mc:Ignorable="d"
                            SupportedOrientations="Portrait"
                            Orientation="Portrait"
                            d:DesignWidth="3000"
                            toolkit:TiltEffect.IsTiltEnabled="True"
                            Background="Black"
                            Foreground="White"
                            DataContext="{Binding MainPage, Source={StaticResource Factory}}">

    <toolkit:TransitionService.NavigationInTransition>
        <toolkit:NavigationInTransition>
            <toolkit:NavigationInTransition.Backward>
                <toolkit:TurnstileTransition Mode="BackwardIn" />
            </toolkit:NavigationInTransition.Backward>
            <toolkit:NavigationInTransition.Forward>
                <toolkit:TurnstileTransition Mode="ForwardIn" />
            </toolkit:NavigationInTransition.Forward>
        </toolkit:NavigationInTransition>
    </toolkit:TransitionService.NavigationInTransition>
    <toolkit:TransitionService.NavigationOutTransition>
        <toolkit:NavigationOutTransition>
            <toolkit:NavigationOutTransition.Backward>
                <toolkit:TurnstileTransition Mode="BackwardOut" />
            </toolkit:NavigationOutTransition.Backward>
            <toolkit:NavigationOutTransition.Forward>
                <toolkit:TurnstileTransition Mode="ForwardOut" />
            </toolkit:NavigationOutTransition.Forward>
        </toolkit:NavigationOutTransition>
    </toolkit:TransitionService.NavigationOutTransition>

    <phone:PhoneApplicationPage.Resources>
        <Converters:PortraitImageConverter x:Key="PortraitImageConverter" />
        <!--<Converters:IntToIncrementedIntConverter x:Key="IntToIncrementedIntConverter" />-->
        <Converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <Converters:YoutubeVideosCollectionToLastCollectionConverter x:Key="YoutubeVideosCollectionToLastCollectionConverter" />
    </phone:PhoneApplicationPage.Resources>

    <BindableApplicationBar:Bindable.ApplicationBar>
        <BindableApplicationBar:BindableApplicationBar Mode="Minimized"
                                                       BackgroundColor="{StaticResource MainRedColor}"
                                                       BindableOpacity="0.85">
            <BindableApplicationBar:BindableApplicationBarButton Text="refresh"
                                                                 IconUri="/Assets/AppBar/refresh.png"
                                                                 IsEnabled="True"
                                                                 Command="{Binding RefreshDataCommand}" />

            <BindableApplicationBar:BindableApplicationBar.MenuItems>

                <BindableApplicationBar:BindableApplicationBarMenuItem Text="about us"
                                                                       Command="{Binding NavigateToAboutUsPageCommand}" />

            </BindableApplicationBar:BindableApplicationBar.MenuItems>

        </BindableApplicationBar:BindableApplicationBar>
    </BindableApplicationBar:Bindable.ApplicationBar>

    <Grid x:Name="LayoutRoot"
          Margin="0,0,0,30">

        <phone:Panorama x:Name="MainPanorama">

            <phone:Panorama.Background>
                <ImageBrush ImageSource="{Binding FlickrImagesCollection[0].LargeImageUrl}"
                            Stretch="UniformToFill"
                            Opacity="0.4" />
            </phone:Panorama.Background>
                                  <!--Source="http://farm3.staticflickr.com/2922/14300798561_359f526fbf_k.jpg"-->
                            
            <phone:PanoramaItem x:Name="FeaturedPanoramaItem">
                <Grid Margin="-12,-30,0,0">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Tap">
                            <i:InvokeCommandAction Command="{Binding NavigateToAlbumPhotosPageCommand, Mode=OneWay}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <Image Source="{Binding FlickrImagesCollection, Converter={StaticResource PortraitImageConverter}}"
                           Stretch="UniformToFill"
                           HorizontalAlignment="Center" />
                    <Grid VerticalAlignment="Bottom"
                          Opacity="0.8">
                        <Grid.Background>
                            <LinearGradientBrush EndPoint="0.5,1"
                                                 StartPoint="0.5,0"
                                                 Opacity="0.8">
                                <GradientStop Color="Black"
                                              Offset="1" />
                                <GradientStop Color="Black"
                                              Offset="0.543" />
                            </LinearGradientBrush>
                        </Grid.Background>
                        <TextBlock HorizontalAlignment="Left"
                                   TextWrapping="Wrap"
                                   Text="{Binding FlickrImagesCollection[0].Title}"
                                   Margin="12"
                                   FontWeight="Medium"
                                   FontSize="32"
                                   FontStretch="ExtraExpanded"
                                   Foreground="LightGray" />
                    </Grid>

                </Grid>

            </phone:PanoramaItem>

