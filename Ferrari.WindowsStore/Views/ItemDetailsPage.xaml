                                                                   FontSize="16"
                                                                   Foreground="White"
                                                                   TextWrapping="WrapWholeWords"
                                                                   Margin="12" />
                                                    </StackPanel>
                                                    <Image Source="{Binding ImageUrl}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Top"
                                                           Stretch="UniformToFill"
                                                           Height="250"
                                                           Width="350"
                                                           Margin="0,0,0,0" />
                                                </StackPanel>
                                            </InlineUIContainer>
                                            <InlineUIContainer>
